{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "prettier": "prettier --config .prettierrc \"src/**/*.ts\" --write",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --fix --ext .ts",
    "start": "node src/server.ts",
    "startme": "nodemon src/server.ts",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "jasmine": "jasmine",
    "test": "rm -r build && npx tsc && ENV=test db-migrate --env test up && jasmine-ts && db-migrate db:drop test",
    "test-db": "npm run dbtest-reset && export ENV=test|| set ENV=test&& npm run dbtest-up && jasmine-ts src/models/tests/db_spec.ts && npm run dbtest-reset",
    "test-routes": "npm run dbtest-reset && export ENV=test|| set ENV=test&& npm run dbtest-up && jasmine-ts src/server-test.ts && npm run dbtest-reset",
    "dbtest-reset": "db-migrate reset --config ./database.json --e test",
    "dbtest-up": "db-migrate --config ./database.json --e test up",
    "dev-startdb": "db-migrate up --config ./database.json --e dev",
    "dev-resetdb": "db-migrate reset --config ./database.json --e dev",
    "build": "npx tsc",
    "tsc": "tsc"
  },
  "author": "Abdelaziz Moustafa Elgeab",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "cross-env": "^7.0.3",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.5.1",
    "supertest": "^6.3.3",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jasmine": "^3.6.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.17",
    "@types/pg": "^7.14.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jasmine": "^3.6.4",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.3.0",
    "jwt-decode": "^3.1.2",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^4.2.9"
  }
}
